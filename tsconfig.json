{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "lib": ["es2022"],

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* For transpiling with TypeScript: */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true
  }
}
